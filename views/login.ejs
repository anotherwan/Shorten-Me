  <h2> Login </h2>
  <form action="/login" method="POST" style="margin:150px" enctype="application/x-www-form-urlencoded">
    <input type="hidden" name="_method" value="PUT">
    <label for="email"><strong>Email:</strong></label>
    <br>
    <input id="email" type="email" name="email" placeholder="email@example.com" style="width: 300px">
    <br>
    <br>
    <br>
    <br>
    <label for="password"><strong>Password:</strong></label>
    <br>
    <input id="password" type="password" name="password" placeholder="Password" style="width: 300px">
    <br>
    <br>
    <br>
    <input type="submit" value="Submit">
  </form>
</body>
</html>
